{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
	<div class="">
		<div class="g-grid">
			<div class="g-block size-45">
				<div class="g-content">
					{% if particle.image %}<img src="{{ url(particle.image) }}" class="" alt="{{ particle.headline|e }}" />{% endif %}
				</div>
			</div>
			<div class="g-block size-55">
				<div class="g-content">
					{% if particle.linktext %}<p><a href="{{ particle.link|e }}" class=""><h2>{{ particle.linktext|e }}</h2></a></p>{% endif %}
					{% if particle.description %}<div class="sample-description">{{ particle.description|raw }}</div>{% endif %}
				</div>
			</div>
			<div class="g-block size-100">
				<div class="g-content">
					{% if particle.linktext %}<p><a href="{{ particle.link|e }}" class="button">{{ 'Mehr sehen'|escape }}</a></p>{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}